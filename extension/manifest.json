{
  "manifest_version": 3,
  "name": "MyKereta Autofill",
  "version": "0.1.0",
  "description": "Autofill helper for MyKereta.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://127.0.0.1:5173/*",
    "https://mykereta.vercel.app/*"
  ],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "https://mykereta.vercel.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}